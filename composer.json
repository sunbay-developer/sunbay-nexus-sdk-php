{
    "name": "sunmi/sunbay-nexus-sdk-php",
    "description": "Official PHP SDK for Sunbay Nexus Payment Platform",
    "type": "library",
    "keywords": [
        "sunbay",
        "nexus",
        "payment",
        "sdk",
        "php"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Sunmi",
            "email": "support@sunmi.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.5",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "monolog/monolog": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Sunmi\\Sunbay\\Nexus\\": "src/Sunmi/Sunbay/Nexus/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sunmi\\Sunbay\\Nexus\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "check": [
            "@test"
        ]
    }
}

